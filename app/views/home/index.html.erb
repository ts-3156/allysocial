<script src="<%= asset_path '/template/js/new-age.js' %>"></script>

<div id="new-age-container">

  <nav class="navbar navbar-expand-lg navbar-light fixed-top" id="mainNav">
    <div class="container">
      <a class="navbar-brand" href="<%= root_path(via: 'app_name') %>"><%= t('.app_name') %></a>
      <ul class="navbar-nav ml-auto">
        <li class="nav-item">
          <% if user_signed_in? %>
            <a class="nav-link" href="<%= dashboard_path %>">Dashboard</a>
          <% else %>
            <a class="nav-link" href="<%= raw user_twitter_omniauth_authorize_path %>">Sign in</a>
          <% end %>
        </li>
      </ul>
    </div>
  </nav>

  <header class="masthead">
    <div class="container h-100">
      <div class="row h-100">
        <div class="col-lg-7 my-auto">
          <div class="header-content mx-auto">
            <h1 class="mb-5"><%= t('.hero_section.text') %></h1>
            <a href="<%= raw user_twitter_omniauth_authorize_path %>" class="btn btn-outline btn-xl js-scroll-trigger"><%= t('.hero_section.button') %></a>
          </div>
        </div>
        <div class="col-lg-5 my-auto">
          <div class="device-container">
            <div class="device-mockup iphone6_plus portrait white">
              <div class="device">
                <div class="screen">
                  <!-- Demo image for screen mockup, you can put an image here, some HTML, an animation, video, or anything else! -->
                  <img src="<%= asset_path '/template/img/demo-screen-1.jpg' %>" class="img-fluid" alt="">
                </div>
                <div class="button">
                  <!-- You can hook the "home button" to some JavaScript events or just remove it -->
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </header>

  <section style="display: none;" class="download bg-primary text-center" id="download">
    <div class="container">
      <div class="row">
        <div class="col-md-8 mx-auto">
          <h2 class="section-heading">Discover what all the buzz is about!</h2>
          <p>Our app is available on any mobile device! Download now to get started!</p>
          <div class="badges">
            <a class="badge-link" href="#"><img src="<%= asset_path '/template/img/google-play-badge.svg' %>" alt=""></a>
            <a class="badge-link" href="#"><img src="<%= asset_path '/template/img/app-store-badge.svg' %>" alt=""></a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="features" id="features">
    <div class="container">
      <div class="section-heading text-center">
        <h2><%= t('.features_section.title') %></h2>
        <p class="text-muted"><%= t('.features_section.text_html') %></p>
        <hr>
      </div>
      <div class="row">
        <div class="col-lg-4 my-auto">
          <div class="device-container">
            <div class="device-mockup iphone6_plus portrait white">
              <div class="device">
                <div class="screen">
                  <!-- Demo image for screen mockup, you can put an image here, some HTML, an animation, video, or anything else! -->
                  <img src="<%= asset_path '/template/img/demo-screen-1.jpg' %>" class="img-fluid" alt="">
                </div>
                <div class="button">
                  <!-- You can hook the "home button" to some JavaScript events or just remove it -->
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-lg-8 my-auto">
          <div class="container-fluid">
            <div class="row">
              <div class="col-lg-6">
                <div class="feature-item">
                  <i class="icon-screen-smartphone text-primary"></i>
                  <h3><%= t('.features_section.first.title') %></h3>
                  <p class="text-muted"><%= t('.features_section.first.text') %></p>
                </div>
              </div>
              <div class="col-lg-6">
                <div class="feature-item">
                  <i class="icon-camera text-primary"></i>
                  <h3><%= t('.features_section.second.title') %></h3>
                  <p class="text-muted"><%= t('.features_section.second.text') %></p>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-lg-6">
                <div class="feature-item">
                  <i class="icon-present text-primary"></i>
                  <h3><%= t('.features_section.third.title') %></h3>
                  <p class="text-muted"><%= t('.features_section.third.text') %></p>
                </div>
              </div>
              <div class="col-lg-6">
                <div class="feature-item">
                  <i class="icon-lock-open text-primary"></i>
                  <h3><%= t('.features_section.fourth.title') %></h3>
                  <p class="text-muted"><%= t('.features_section.fourth.text') %></p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section style="display: none;" class="cta">
    <div class="cta-content">
      <div class="container">
        <h2>Stop waiting.<br>Start building.</h2>
        <a href="#contact" class="btn btn-outline btn-xl js-scroll-trigger">Let's Get Started!</a>
      </div>
    </div>
    <div class="overlay"></div>
  </section>

  <section class="contact bg-primary" id="contact">
    <div class="container">
      <h2><%= t('.contact_section.title_html') %></h2>
      <div class="mb-3"><%= t('.contact_section.text_html') %></div>
      <ul class="list-inline list-social">
        <li class="list-inline-item social-twitter">
          <a href="https://twitter.com/egotter_cs" target="_blank">
            <i class="fab fa-twitter"></i>
          </a>
        </li>
      </ul>
    </div>
  </section>

  <footer>
    <div class="container">
      <p>&copy; <%= t('.app_name') %> 2020. All Rights Reserved.</p>
      <ul class="list-inline">
        <li class="list-inline-item">
          <a href="#">Privacy</a>
        </li>
        <li class="list-inline-item">
          <a href="#">Terms</a>
        </li>
        <li class="list-inline-item">
          <a href="#">FAQ</a>
        </li>
        <li class="list-inline-item">
          <% if user_signed_in? %>
            <%= link_to 'Sign out', destroy_user_session_path, data: {confirm: 'Do you want to sign out?', method: :delete} %>
          <% else %>
            <%= link_to 'Sign in', user_twitter_omniauth_authorize_path %>
          <% end %>
        </li>
      </ul>
    </div>
  </footer>
</div>
