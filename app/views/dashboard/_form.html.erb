  <datalist id="search-label-options">
  </datalist>
  <div id="quick-select" class="small">
    <span><%= t('.search_label.quick_select') %></span>
    <a class="badge badge-primary mr-1" href="#"></a>
    <a class="badge badge-primary mr-1" href="#"></a>
    <a class="badge badge-primary" href="#"></a>
  </div>
