<script src='https://js.stripe.com/v3'></script>

<script>
  $(function () {
    var signedIn = <%= user_signed_in? %>;
    var hasSubscription = <%= user_signed_in? && current_user.has_subscription?(:plus) %>;
    var i18n = {already_purchased: '<%= t('.already_purchased') %>'};
    var locale = '<%= I18n.locale %>';
    new MyStripe(signedIn, hasSubscription, i18n, locale).init();
  })
</script>
